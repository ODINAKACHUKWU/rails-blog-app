<%= form_with(model: @user, url: edit_profile_path, local: true) do |form| %>
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-4 pr-5">
                <% if @user.avatar_url.present? %>
                    <%= image_tag(avatar(@user), :alt => "avatar image", :class => "rounded-circle", :height => "160") %>
                <% else %>
                    <%= image_tag("avatar.svg", :alt => "avatar image", :class => "rounded-circle", :height => "160") %>
                <% end %>
                <%= form.file_field :avatar_url, class: "form-control mt-3" %>
            </div>
            <div class="col-lg-8 pl-4">
                <div class="form-group">
                    <%= form.text_field :first_name, class: "form-control", placeholder: "First name" %>
                </div>
                <div class="form-group">
                    <%= form.text_field :middle_name, class: "form-control", placeholder: "Middle name" %>
                </div>
                <div class="form-group">
                    <%= form.text_field :last_name, class: "form-control", placeholder: "Last name" %>
                </div>
                <div class="form-group">
                    <%= form.text_field :email, class: "form-control", disabled: true, placeholder: "Email" %>
                </div>
                <div class="form-group">
                    <%= form.text_field :phone_number, class: "form-control", placeholder: "Phone number" %>
                </div>
                <div class="form-group">
                    <%= form.text_field :gender, class: "form-control", placeholder: "Gender" %>
                </div>
                <div class="form-group">
                    <%= form.text_area :biography, class: "form-control", placeholder: "Add bio..." %>
                </div>
                <div class="form-group pt-4">
                    <%= form.submit "Save", class: "btn save-btn mr-2", data: { "disable-with": "Saving..." } %>
                    <%= link_to 'Cancel', profile_path(@user.first_name), class: "btn btn-secondary" %>
                </div>
            </div>
        </div>
    </div>
<% end %>
