<%= form_with(model: @user, local: true) do |form| %>
  <div class="form-group form-icons">
    <span class="fa fa-user"></span>
    <%= form.text_field :first_name, class: "form-control", placeholder: "Firstname" %>
  </div>
  <div class="form-group form-icons">
    <span class="fa fa-user"></span>
    <%= form.text_field :last_name, class: "form-control", placeholder: "Lastname" %>
  </div>
  <div class="form-group form-icons">
    <span class="fa fa-envelope"></span>
    <%= form.email_field :email, class: "form-control", placeholder: "Email address" %>
  </div>
  <div class="form-group form-icons">
    <span class="fa fa-lock"></span>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <%= form.submit "Sign Up", class: "form-control btn-orange mt-4", data: { "disable-with": "Signing up..." } %>
<% end %>
