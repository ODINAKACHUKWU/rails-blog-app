<%= form_with(model: @user, url: login_path, local: true) do |form| %>
  <div class="form-group form-icons">
    <span class="fa fa-envelope"></span>
    <%= form.email_field :email, class: "form-control", placeholder: "Email address" %>
  </div>
  <div class="form-group form-icons">
    <span class="fa fa-lock"></span>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <div class="password-reset-link text-right mb-3">
    <a href="#" class="text-white">Forgot password?</a>
  </div>
  <%= form.submit "Log in", class: "form-control btn-orange" %>
<% end %>